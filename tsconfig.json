{
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "ES6",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "strict": true,
        "module": "ES6",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "paths": {
            "@/*": ["*"]
        }
    },

    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
